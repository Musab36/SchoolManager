<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/myCard"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        card_view:cardBackgroundColor="@color/light_cyan">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Name: Roger"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                    -->

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Subject: Biology"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true" />


                <TextView
                    android:id="@+id/clas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Class: 5"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/subject"/>

                <TextView
                    android:id="@+id/instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Instructions: Do this..."
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/clas" />

                <TextView
                    android:id="@+id/remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Remarks: Good"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/instructions" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Score: 50"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/remarks" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>